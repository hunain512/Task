<h1 class="text-center"> Create a new store </h1>
<div class="container">
  <div class="row justify-content-center">
  <div class="col-10">
    <%= form_with(model: @store, class: "shadow rounded mb-3 bg-dark rounded", local: true) do |f| %>
      <div class="form-group row">
        <%= f.label :name, "store name", class: "col-2 col-form-label text-light" %>
        <div class="col-10">
        <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter the storename " %>
        <%= f.collection_select(:user_ids, User.all, :id, :name, {prompt: "Make your selection from the list below (can be empty)"}, {multiple: true, size: 4, class: "form-select shadow rounded"}) %>
        </div>
      </div>

    <div class="form-group row justify-content-center">
     <%= f.submit class: "btn btn-outline-light btn-lg" %> 
    </div>
<% end %>