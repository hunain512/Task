<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
 
  <div class="field ">
  <%= f.label :name %><br />
  <%= f.text_field :name, class: "col-6" %>
 </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, class: "col-6", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, class: "col-6", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, class: "col-6", autocomplete: "new-password" %>
  </div>
  <br>
  <div class="field">
  <%= f.collection_select(:store_ids, Store.all, :id, :name,  {prompt: "Make your selection from the list below (can be empty)"}, {multiple: true, size: 4}) %>
  </div>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
