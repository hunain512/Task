<h1 class="mt-4 bg-dark text-light"> Create category </h1>
<%= form_with(model: @category, class: "shadow p-3 mb-3 bg-dark rounded", local: true) do |f| %>
  <div class="form-group row">
    <%= f.label :name, class: "col-2 col-form-label text-light" %>
    <div class="col-10">
    <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "enter the name" %>
    </div>
  </div>

<div class="form-group row">
<%= f.label :category, class: "col-2 col-form-label text-light" %>
<div class="col-10 col-form-label"> 
<%= f.collection_select(:store_ids, Store.all, :id, :name, {prompt: "select your store for creating the category"}, {class: " col-10 col-form-label form-select shadow rounded"}) %>
</div>
</div>

<div class="form-group row justify-content-center">
 <%= f.submit class: "btn btn-outline-light btn-lg" %> 
</div>
<% end %>