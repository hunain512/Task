<%= form_with(model: @item, class: "shadow p-3 mb-3 bg-dark rounded", local: true) do |f| %>
  <div class="form-group row">
    <%= f.label :name, class: "col-2 col-form-label text-light" %>
    <div class="col-10">
    <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "enter the name" %>
    </div>
  </div>
  <div class="form-group row">
  <%= f.label :price, class: "col-2 col-form-label text-light" %>
  <div class="col-10"> 
    <%= f.text_area :price, rows: 1, class: "form-control shadow rounded", placeholder: "enter price" %>
  </div>
</div>

<div class="form-group row">
<%= f.label :quantity, class: "col-2 col-form-label text-light" %>
<div class="col-10"> 
  <%= f.text_area :quantity, rows: 1, class: "form-control shadow rounded", placeholder: "enter quantity" %>
</div>
</div>

<div class="form-group row">
<%= f.label :category, class: "col-2 col-form-label text-light" %>
<div class="col-10 col-form-label"> 
<%= f.collection_select(:category_id, Category.all, :id, :name, {prompt: "select your category for the item"}, {class: " col-10 col-form-label form-select shadow rounded"}) %>
</div>
</div>

<div class="form-group row justify-content-center">
 <%= f.submit class: "btn btn-outline-light btn-lg" %> 
</div>
<% end %>
